<resources>

    <style name="MainContainer">
        <item name="android:background">@drawable/fondo</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
    </style>


    <style name="CustomToastContainer">
        <item name="android:padding">8dp</item>
        <item name="android:background">#FFEB3B</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="CustomToastTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>


    <style name="CustomToastDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>


    <style name="CustomToastImage">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@drawable/notifi</item>
    </style>
</resources>

